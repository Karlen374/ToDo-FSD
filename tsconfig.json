{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es6",
      "module": "es2022",
      "jsx": "react",
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "baseUrl": "./",
      "paths": {
        "@components/*": ["src/components/*"],
        "@features/*": ["src/features/*"],
        "@pages/*": ["src/pages/*"],
        "@shared/*": ["src/shared/*"],
        "@widgets/*": ["src/widgets/*"],
        "@entities/*": ["src/entities/*"]
      },
    },
    "include": ["src", "declaration.d.ts"]
  }